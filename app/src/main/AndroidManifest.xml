<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.metafour.cwbay" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cwbay_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SignInActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.SignUpActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.CategoryActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.ProfileUpdateActivity"
            android:label="@string/title_activity_profile_update" >
        </activity>
        <activity
            android:name=".ui.ProductListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.ProductDetailsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.ProductImagesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".WebAPIWorkbenchActivity"
            android:label="@string/title_activity_web_apiworkbench" >
        </activity>
    </application>

</manifest>
